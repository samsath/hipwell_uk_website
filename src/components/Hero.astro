---
import { Image } from 'astro:assets';
import Pattern from '../assets/bsg_blocks.svg';

interface Props {
  header: string;
  tagline: string;
  description: string;
}
const { header, tagline, description } = Astro.props;
const first = header.split(' ')[0].toUpperCase();
const second = header.split(' ')[1].toUpperCase();
---

<section class="py-32 md:py-40 text-center relative bg-white">
  <div class="container max-w-6xl mx-auto px-8">
    <h1 class="text-6xl md:text-8xl lg:text-9xl xl:text-[8rem] font-black mb-4 leading-[0.9] tracking-tight">
      <span class="block text-electric-green text-shadow-brutal-black">{first}</span>
      <span class="block text-cyber-blue text-shadow-brutal-black-lg">{second}</span>
    </h1>
    <p class="text-2xl md:text-3xl lg:text-4xl font-extrabold mb-12 text-bold-orange uppercase tracking-widest text-shadow-brutal-black-sm">
      { tagline }
    </p>
    <div class="*:text-lg *:md:text-xl *:lg:text-2xl max-w-4xl mx-auto mb-16 *:text-black text-black leading-relaxed font-semibold bg-white p-8 border-8 border-black shadow-brutal-green">
      <Fragment set:html={description} />
    </div>
  </div>
</section>
