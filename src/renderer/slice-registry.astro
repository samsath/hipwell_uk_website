---
import {
  ServiceGrid,
  serviceGridTransformer,
  TextBlock,
  textBlockTransformer,
  Line,
  lineTransformer,
  ListGrid,
  listGridTransformer,
  ContactForm,
  contactFormTransformer
} from '../components';

const { item } = Astro.props;
const sliceType = item.slice_type;

const render = (sliceKey: string): boolean => sliceType === sliceKey;
---

<>
  {render('servicegrid') && <ServiceGrid {...serviceGridTransformer(item)} />}
  {render('text_block') && <TextBlock {...textBlockTransformer(item)} />}
  {render('line') && <Line {...lineTransformer(item)} />}
  {render('list_grid') && <ListGrid {...listGridTransformer(item)} />}
  {render('contactform') && <ContactForm {...contactFormTransformer(item)} client:only='react' />}
</>
